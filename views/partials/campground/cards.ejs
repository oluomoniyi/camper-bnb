<% if (query) { %> 
	<% if (query == "/campgrounds") { %>
		<h3 class="title-modern">You have <%= campgrounds.length %> campground <% if (campgrounds.length > 1) {%>s<% } %> listed</h3>
	<% } %>
	<% if (query == "/" || query == "/search"){ %>
		<h3 class="title-modern">There are <%= campgrounds.length %> campgrounds available</h3>
	<% } %>
	<% if (query != "/campgrounds" && query != "/" && query != "/search") { %>
		<h3 class="title-modern">There are <%= campgrounds.length %> campgrounds available in <span style="text-transform:capitalize"><%= query %></span></h3>
	<% } %>
<% } %>
<% campgrounds.forEach(function(campground){ %>
<a href="/campgrounds/<%= campground.id %>">
	<div class="column col-md-4 col-lg-4 col-sm-12 col">
		<!-- Post-->
		<div class="post-module">
		  <!-- Post Content-->
		  <div class="post-image" style="background-image:url('<%=campground.image%>')" data-src="%s">
		  </div>
		  <div class="post-content">
			<div class="category"><%= campground.location %></div>
			<h3 class="title">
				<% if (campground.name) {  %>
					<%= (campground.name).substr(0,18) %>
					<% if ((campground.name).length > 18) { %>
						<span>...</span>
					<% } %>	
				<% } %>	
			</h3>
			<h4 class="sub_title">
			<% if (campground.price > 0) {%>
					Â£<%= campground.price %> /night
				<% } else { %>
					Free Camping
				<% } %>
			</h4>
			<p class="description">
				<% if (campground.description) {  %>
					<%= (campground.description).substr(0,70) %>
					<% if ((campground.description).length > 70) {  %>
						<span>...</span>
					<% } %>
				<% } %>
			</p>
			<div class="post-meta">
				<span class="comments">
						<% function getRandomInt(min, max) { %>
						<%  return Math.random() * (max - min + 1) + min; %>
					<% } %>
					<% var value = getRandomInt(2.5, 3.9); %>
					<% for (var i =0; i < parseInt(value); i++){%>
						<i class="fa fa-star" aria-hidden="true" style="color:#e78b90"></i>
					<% } %>
					<% var valueModulo = value % parseInt(value) %>
					<% if (valueModulo > 0.5) { %>
						<i class="fa fa-star-half" aria-hidden="true" style="color:#e78b90"></i> 
					<% } %>
					<%= Math.floor(getRandomInt(10, 100)) %> reviews
				</span>	
			</div>
		  </div>
		</div>
	</div>
</a>
<% }) %> 